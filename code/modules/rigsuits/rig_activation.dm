/**
 * Immediately activates the rig.
 */
/obj/item/rig/proc/activate(mob/user, silent)

/**
 * Immediately deactivates the rig.
 */
/obj/item/rig/proc/deactivate(mob/user, silent)

/**
 * Tries to activate the rig.
 */
/obj/item/rig/proc/try_activate(mob/user, silent)

/**
 * Tries to deactivate the rig.
 */
/obj/item/rig/proc/try_deactivate(mob/user, silent)
